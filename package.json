{
    "name": "log-viewer",
    "displayName": "Log Viewer",
    "description": "A simple log viewer extension",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "log-viewer.open",
                "title": "Log Viewer: Open"
            },
            {
                "command": "log-viewer.close",
                "title": "Log Viewer: Close"
            }
        ],
        "configuration": {
            "title": "Log Viewer",
            "properties": {
                "logViewer.logDirectory": {
                    "type": "string",
                    "default": "log",
                    "description": "The directory containing log files (relative to workspace root)."
                },
                "logViewer.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically refresh log content when files change."
                },
                "logViewer.showLineNumbers": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show line numbers in log content."
                },
                "logViewer.filePattern": {
                    "type": "string",
                    "default": "*.log",
                    "description": "Glob pattern for log files (e.g., '*.log', '*.txt'). Use comma to separate multiple patterns."
                },
                "logViewer.wrapLines": {
                    "type": "boolean",
                    "default": false,
                    "description": "Wrap long lines in log content."
                },
                "logViewer.tailMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto-scroll to the end when new log content is loaded."
                },
                "logViewer.stripAnsiCodes": {
                    "type": "boolean",
                    "default": true,
                    "description": "Remove ANSI escape codes (terminal color codes) from log output."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "clean": "rm -rf out",
        "rebuild": "npm run clean && npm run compile",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "test:unit": "jest"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "jest": "^29.7.0",
        "mocha": "^10.2.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}
